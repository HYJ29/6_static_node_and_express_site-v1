extends layout.pug

block content 
  nav.grid-container.portfolio-breadcrumb
    a(href='/') ‚Üê Back
  article.grid-container.portfolio-intro.portfolio-project
    .grid-x
      .cell.small-6.medium-9.large-9

        
        .title-wrapper
          h1.project-title= title

        
        p.lead.text-light
          | #{description}

      .cell.portfolio-meta.small-6.medium-2.large-3
        h6 Technologies

        
        ul
          each tech in technology
            li= tech

      
        a.button.expanded(href=liveLink, target="_blank") Live Demo
        a.button.expanded(href=githubLink, target="_blank") GitHub Repo
    
    each image in projectImages
      img.image(src=image)
